<Window x:Class="FlatsOrders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlatsOrders"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFE2C9C9">
        <Button x:Name="AddButton" Content="Добавить ордер" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="45" Width="132" Background="#FF88FF00" Click="AddButton_Click"/>
        <Button x:Name="ChangeButton" Content="Изменить ордер" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Height="45" Width="132" Background="#FF5FB2FF" Click="ChangeButton_Click"/>
        <Frame x:Name="Frame" Content="" Margin="147,0,0,0" Foreground="Red" NavigationUIVisibility="Hidden" Navigated="Frame_Navigated"/>
        <Button x:Name="GetOrdersListButton" Content="Просмотреть список&#xD;&#xA;ордеров" HorizontalAlignment="Left" Margin="10,338,0,0" VerticalAlignment="Top" Height="45" Width="132" Background="#FFCCCCCC" Click="GetOrdersListButton_Click"/>

    </Grid>
</Window>
